<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eatproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EATProject">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AutoMatchingActivity" />
        <activity android:name=".activities.CreateRoomActivity" />
        <activity android:name=".activities.FeedbackActivity" />
        <activity android:name=".activities.FindActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.RecoRestaurantActivity" />
        <activity android:name=".activities.RoomActivity" />
        <activity android:name=".activities.StartActivity" />
        <activity android:name=".activities.RegisterActivity"></activity>
        <activity android:name=".activities.ResearchActivity"></activity>

    </application>

</manifest>